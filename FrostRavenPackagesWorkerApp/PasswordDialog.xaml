<Window x:Class="FrostRavenPackagesWorkerApp.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrostRavenPackagesWorkerApp"
        mc:Ignorable="d"
        Title=""
        Height="130" Width="250"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter the password:" FontSize="18" FontFamily="Roboto"/>
        <PasswordBox Grid.Row="1" Name="PackPasswordPB" FontSize="24" FontFamily="Roboto" PasswordChar="*" VerticalContentAlignment="Center"/>
        <Button Grid.Row="2" Content="OK" Name="ConfirmBtn" FontFamily="Roboto" FontSize="18" HorizontalAlignment="Right"/>
    </Grid>
</Window>
